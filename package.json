{
  "name": "lornu.ai",
  "version": "0.1.0",
  "description": "The remake of lornu.ai with Rust Engine and modern architecture",
  "type": "module",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "build": "echo 'Build script - implement based on your app structure'",
    "infra:plan": "bun infra/plan.ts",
    "infra:apply": "bun infra/apply.ts",
    "infra:agent:sandbox:create": "bun infra/agent-sandbox.ts --action create",
    "infra:agent:sandbox:delete": "bun infra/agent-sandbox.ts --action delete",
    "infra:agent:deploy": "bun infra/agent-deploy.ts",
    "ci:generate-workflow": "bun ci/generate-workflow.ts",
    "ci:generate-tekton": "bun ci/generate-tekton.ts",
    "setup:github-bot": "bun scripts/setup-github-bot.ts",
    "find:github-app-installation": "bun scripts/find-github-app-installation-id.ts",
    "agent:pr-rebase": "bun ai-agents/ai-agent-pr-rebase/index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@dagger.io/dagger": "^0.19.10",
    "@octokit/rest": "^22.0.1",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.52.0",
    "@opentelemetry/sdk-trace-base": "^1.26.0",
    "yaml": "^2.3.4"
  }
}
