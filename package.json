{
  "name": "lornu.ai",
  "version": "0.1.0",
  "description": "The remake of lornu.ai with Rust Engine and modern architecture",
  "type": "module",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "build": "echo 'Build script - implement based on your app structure'",
    "workflow:generate": "bun ci/generate-workflow.ts",
    "image:build": "bun ci/build-ci-image.ts",
    "image:publish": "bun ci/build-ci-image.ts --push",
    "infra:plan": "bun infra/plan.ts",
    "workflow:tekton:generate": "bun ci/generate-tekton-workflow.ts",
    "infra:apply": "bun infra/apply.ts",
    "infra:agent:sandbox:create": "bun infra/agent-sandbox.ts --action create",
    "infra:agent:sandbox:delete": "bun infra/agent-sandbox.ts --action delete",
    "infra:agent:deploy": "bun infra/agent-deploy.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@types/js-yaml": "^4.0.9",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@dagger.io/dagger": "^0.19.10",
    "@octokit/rest": "^20.0.0",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.52.0",
    "@opentelemetry/sdk-trace-base": "^1.26.0",
    "js-yaml": "^4.1.0"
  }
}
